<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <ScrollView
        android:id="@+id/vanilla_like_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_weight="1"
        android:background="@drawable/background_card"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_textview"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/create_profile_vanilla_like_versions"

                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/minecraft_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/vanilla_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/vanilla_profile"
                app:srcCompat="@drawable/ic_minecraft" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/vanilla_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="@string/create_profile_vanilla"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/minecraft_icon"
                app:layout_constraintTop_toBottomOf="@+id/title_textview" />

            <ImageView
                android:id="@+id/optifine_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/optifine_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/optifine_profile"
                app:srcCompat="@drawable/ic_optifine" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/optifine_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/create_profile_optifine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/optifine_icon"
                app:layout_constraintTop_toBottomOf="@+id/vanilla_profile" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/modded_versions_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_weight="1"
        android:background="@drawable/background_card"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_modded_textview"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/create_profile_modded_versions"

                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fabric_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/modded_profile_fabric"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/modded_profile_fabric"
                app:srcCompat="@drawable/ic_fabric" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/modded_profile_fabric"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="@string/modloader_dl_install_fabric"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fabric_icon"
                app:layout_constraintTop_toBottomOf="@+id/title_modded_textview" />

            <ImageView
                android:id="@+id/quilt_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/modded_profile_quilt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/modded_profile_quilt"
                app:srcCompat="@drawable/ic_quilt" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/modded_profile_quilt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/modloader_dl_install_quilt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/quilt_icon"
                app:layout_constraintTop_toBottomOf="@+id/modded_profile_fabric" />

            <ImageView
                android:id="@+id/forge_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/modded_profile_forge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/modded_profile_forge"
                app:srcCompat="@drawable/ic_anvil" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/modded_profile_forge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/modloader_dl_install_forge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/forge_icon"
                app:layout_constraintTop_toBottomOf="@+id/modded_profile_quilt" />

            <ImageView
                android:id="@+id/neoforge_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/zh_modded_profile_neoforge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/zh_modded_profile_neoforge"
                app:srcCompat="@drawable/ic_neoforge" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/zh_modded_profile_neoforge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/zh_modloader_dl_install_neoforge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/neoforge_icon"
                app:layout_constraintTop_toBottomOf="@+id/modded_profile_forge" />

            <ImageView
                android:id="@+id/modpack_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/modded_profile_modpack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/modded_profile_modpack"
                app:srcCompat="@drawable/ic_pojav_full" />

            <com.movtery.pojavzh.ui.view.AnimButton
                android:id="@+id/modded_profile_modpack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_heavy"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/modpack_install_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/modpack_icon"
                app:layout_constraintTop_toBottomOf="@+id/zh_modded_profile_neoforge" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>

